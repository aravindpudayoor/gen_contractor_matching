<div class="form-group">
  <%= f.label :title %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :Location %>
    </div>
    <div class="col-sm-3">
      <%= f.label :latitude %>
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :longitude %>
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :budget %>
    </div>
    <div class="col-sm-3">
      <%= f.label :min_budget %>
      <%= f.text_field :min_budget, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :max_budget %>
      <%= f.text_field :max_budget, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :type_of_service %>
    </div>
    <div class="col-sm-3">
      <%= f.label :design_service %>
      <%= f.check_box :design_service, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :build_service %>
      <%= f.check_box :build_service, class: "form-control" %>
    </div>
  </div>
</div>